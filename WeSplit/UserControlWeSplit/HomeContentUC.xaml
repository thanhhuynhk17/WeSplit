<UserControl x:Class="WeSplit.UserControlWeSplit.HomeContentUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeSplit.UserControlWeSplit"
             
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
             
             
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Filter Menu-->
        <Grid Grid.Row="0" Margin="4">
            <materialDesign:ColorZone Mode="Dark">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <RadioButton Command="{Binding ListJourneyCommand}" Style="{StaticResource MaterialDesignTabRadioButton}" Margin="4" 
                             IsChecked="True" Content="Toàn bộ chuyến đi" />
                    <RadioButton Command="{Binding ListJourneyGoneCommand}" Style="{StaticResource MaterialDesignTabRadioButton}" Margin="4" 
                             IsChecked="True" Content="Đã từng đi" />
                    <RadioButton Command="{Binding ListJourneyNeverGone}" Style="{StaticResource MaterialDesignTabRadioButton}" Margin="4" 
                             IsChecked="True" Content="Sắp đi" />
                </StackPanel>
            </materialDesign:ColorZone>
        </Grid>
        <!--Filter Menu/-->

        <materialDesign:Card Grid.Row="1" materialDesign:ShadowAssist.ShadowDepth="Depth5"
                                 Padding="10" Margin="10">
            <!--Binding list items-->
            <ListView ItemsSource="{Binding ListJourney}">
                <ListView.View>
                    <GridView AllowsColumnReorder="False">
                        <GridViewColumn DisplayMemberBinding="{Binding date_start, StringFormat='dd-MM-yyyy'}"
                                        Header="Ngày khởi hành" />
                        <GridViewColumn DisplayMemberBinding="{Binding date_end, StringFormat='dd-MM-yyyy'}"
                                        Header="Ngày kết thúc" />
                        <GridViewColumn DisplayMemberBinding="{Binding place.name}"
                                        Header="Địa điểm" />
                        <GridViewColumn Header="Thành viên">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox Width="100">
                                        <ComboBoxItem Content="Nguyễn Văn A" />
                                        <ComboBoxItem Content="Nguyễn Văn B" />
                                        <ComboBoxItem Content="Nguyễn Văn C" />
                                    </ComboBox>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Tổng tiền" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding total_cost}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Chi tiết" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="{materialDesign:PackIcon Information}"
                                            ToolTip="Icon" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
            <!--Binding list items/-->

        </materialDesign:Card>
    </Grid>
</UserControl>
